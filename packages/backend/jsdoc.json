{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    },
    "source": {
        "include": ["./packages/backend/src"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "plugins/markdown",
        "better-docs/component",
        "jsdoc-route-plugin"
    ],
    "templates": {
        "better-docs": {
            "name": "4dx backend"
        }
    },
    "opts": {
        "destination": "./docs/backend",
        "recurse": true,
        "readme": "README.md"
    }
}
