{
	"tags": {
		"allowUnknownTags": true,
		"dictionaries": ["jsdoc", "closure"]
	},
	"source": {
		"include": ["packages/frontend/src"],
		"includePattern": ".+\\.js(doc|x)?$",
		"excludePattern": "(^|\\/|\\\\)_"
	},
	"plugins": ["plugins/markdown", "better-docs/component"],
	"templates": {
		"better-docs": {
			"name": "4dx react components"
		}
	},
	"opts": {
		"destination": "./docs",
		"recurse": true,
		"readme": "README.md"
	}
}
